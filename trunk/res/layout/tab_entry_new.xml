<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrap"
    android:id="@+id/tab_entry"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/shadow_left"
        style="@style/wrap"
        android:src="@drawable/tab_shadow_left"
        android:visibility="gone" />

    <LinearLayout
        style="@style/tab_entry"
        android:id="@+id/tab_entry_item"
        android:background="@drawable/tab"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:shadowColor="#000000"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="新标签"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/close"
            style="@style/wrap"
            android:layout_width="@dimen/tab_close_width"
            android:src="@drawable/tab_close_button"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/right_shadow"
        style="@style/wrap"
        android:src="@drawable/tab_shadow_right"
        android:visibility="gone" />

</LinearLayout>