<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fillx"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#88000000"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/fillx"
        android:layout_height="wrap_content"
        android:background="@drawable/c_dialog_0"
        android:orientation="vertical" >

        <TextView
            style="@style/fillx"
            android:layout_height="wrap_content"
            android:paddingBottom="3.0dip"
            android:paddingLeft="6.0dip"
            android:paddingTop="8.0dip"
            android:text="日期选择"
            android:textColor="@android:color/white"
            android:textSize="20.0sp" />

        <View
            style="@style/fillx"
            android:layout_height="0.5dip"
            android:background="#66999999" />

        <LinearLayout
            style="@style/fillx"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="5.0dip" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="年"
                android:textSize="15.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="月"
                android:textSize="15.0sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="日"
                android:textSize="15.0sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            style="@style/fillx"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5.0dip"
            android:paddingRight="5.0dip"
            android:paddingTop="2.0dip" >

            <com.cc.software.calendar.wheelView.WheelView
                android:id="@+id/year_wheel"
                style="@style/fillx"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <com.cc.software.calendar.wheelView.WheelView
                android:id="@+id/month_wheel"
                style="@style/fillx"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />

            <com.cc.software.calendar.wheelView.WheelView
                android:id="@+id/day_wheel"
                style="@style/fillx"
                android:layout_height="wrap_content"
                android:layout_weight="1.0" />
        </LinearLayout>

        <LinearLayout
            style="@style/fillx"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.0dip" >

            <Button
                android:id="@+id/button1"
                style="@style/btn_dialog"
                android:layout_width="0dip"
                android:layout_marginLeft="7dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:text="@string/ok"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button2"
                style="@style/btn_dialog"
                android:layout_width="0dip"
                android:layout_marginRight="7dip"
                android:layout_marginTop="2dip"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>