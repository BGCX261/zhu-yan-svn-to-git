<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fillall"
    android:clickable="true"
    android:orientation="vertical" >

    <com.cc.software.calendar.view.ImageViewEx
        android:id="@+id/image"
        style="@style/fillall" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/wrap"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        style="@style/fillx"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dip"
        android:visibility="gone" >

        <TextView
            android:layout_width="20dip"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weibo_toolbar_bg_left_nor"
            android:gravity="center"
            android:src="@drawable/weibo_back_btn_drawable" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weibo_toolbar_bg_middle_nor"
            android:gravity="center"
            android:src="@drawable/weibo_share_btn_drawable" />

        <ImageView
            android:id="@+id/btn_download"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/weibo_toolbar_bg_right_nor"
            android:gravity="center"
            android:src="@drawable/weibo_download_btn_drawable" />

        <TextView
            android:layout_width="20dip"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </LinearLayout>

</FrameLayout>