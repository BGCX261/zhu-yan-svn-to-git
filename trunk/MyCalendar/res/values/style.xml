<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="analogClock">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- ********************** texts -->
    <style name="fillall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fillx">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="filly">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="c_dialog_0" parent="wrap">
        <item name="android:background">@drawable/c_dialog_0</item>
    </style>

    <style name="c_dialog_header_0" parent="wrap">
        <item name="android:background">@drawable/head_bg</item>
    </style>

    <style name="calendar_view_left" parent="wrap">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calendar_view_right" parent="wrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="view_avg_width">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
    </style>

    <style name="btn_dialog" parent="wrap">
        <item name="android:background">@drawable/c_btn_0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="micro_msg_content" parent="fillx">
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">@dimen/micro_content_text_size</item>
        <!-- <item name="android:autoLink">web</item> -->
        <item name="android:textColorLink">#2894FF</item>
        <item name="android:linksClickable">true</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="micro_msg_content1" parent="fillx">
        <item name="android:textColor">#272727</item>
        <item name="android:textSize">@dimen/micro_content_text_size</item>
        <item name="android:autoLink">web</item>
        <item name="android:textColorLink">#2894FF</item>
        <item name="android:linksClickable">true</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="list" parent="fillx">
        <item name="android:divider">@drawable/between_item_line</item>
        <item name="android:background">@null</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:cacheColorHint">@null</item>
    </style>

    <!-- primary text style -->
    <style name="text1" parent="wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- primary text style, sometime used in background that is different than the default -->
    <style name="text2" parent="wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- text style for secondary information like call times etc.. -->
    <style name="text6" parent="wrap">
        <item name="android:textColor">#FFA4A4A4</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="website_et" parent="fillx">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dip</item>
        <item name="android:imeOptions">actionDone|actionNext</item>
    </style>

    <style name="website_menu_tv" parent="filly">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:background">@drawable/website_self_define_btn</item>
    </style>

    <style name="chinese_calendar_holiday_style">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">#ffff3333</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_marginLeft">0.0dip</item>
    </style>

    <style name="current_day_style">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5.0dip</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">22.0sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textScaleX">1.0</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDy">-1.5</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="calendar_workday_style">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:layout_marginLeft">0.0dip</item>
    </style>

    <style name="chinese_calendar_workday_style">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">top|center</item>
        <item name="android:layout_marginLeft">0.0dip</item>
    </style>

    <style name="Month_flag_bg_style">
        <item name="android:textSize">180.0sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="week_font_style">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">2.0dip</item>
    </style>

    <style name="calendar_holiday_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffff3333</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">0.0dip</item>
    </style>

    <style name="calendar_workday_white_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">0.0dip</item>
    </style>

    <style name="calendar_workday_black_style">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">0.0dip</item>
    </style>

    <style name="chinese_calendar_workday_white_style">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="chinese_calendar_workday_black_style">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">0.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>